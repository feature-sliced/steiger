    }
  ],
  "dependencies": {
    "@feature-sliced/filesystem": "^2.2.5",
    "lodash-es": "^4.17.21",
    "pluralize": "^8.0.0",
    "precinct": "^12.1.1",
    "tsconfck": "^3.0.3"
  },
  "devDependencies": {
    "@steiger/eslint-config": "workspace:*",
    "@steiger/tsconfig": "workspace:*",
    "@steiger/types": "workspace:*",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/lodash-es": "^4.17.12",
    "@types/pluralize": "^0.0.33",
    "tsup": "^8.0.2",
